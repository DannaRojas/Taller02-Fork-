# Compilador y flags
CC = gcc
CFLAGS = -Wall 

# Archivos fuente y ejecutables
SOURCES = taller_procesos.c
OBJECTS = $(SOURCES:.c=.o)
PROGRAMS = taller_procesos

# Target por defecto
all: $(PROGRAMS)

# Compilar el programa
$(PROGRAMS): $(OBJECTS)
	$(CC) $(CFLAGS) $^ -o $@ 

# Compilar archivos objeto
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Limpiar archivos generados
clean:
	$(RM) $(PROGRAMS) $(OBJECTS)

# Reconstruir desde cero
rebuild: clean all
